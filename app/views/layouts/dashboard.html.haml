!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Instagramfollow
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{:id => controller_name}
    %nav.navbar.navbar-default
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Instagram Follow
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to queue_job_index_path do
                Current queue
                %span.badge= @queue
          %ul.nav.navbar-nav.navbar-right
            = form_tag search_path, method: :get, class: 'navbar-form navbar-left', role: 'search' do
              .form-group
                = text_field_tag 'search_term', params['search-term'], class: 'form form-control', placeholder: 'Find User'
                = button_tag 'Search', class: 'btn btn-default', type: :submit
                = link_to 'sign out', destroy_user_session_path, method: :delete
        / /.navbar-collapse
      / /.container-fluid
    = yield
